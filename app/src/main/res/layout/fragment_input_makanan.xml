<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="javoods.xirpl32425263034.project2.smktelkom_mlg.sch.id.javoods.input_makanan">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Resep Makanan"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nama Resep"
            android:inputType="textPersonName"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background"
            android:textColorLink="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Kategori :"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/cardview_light_background" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/makanan" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Alat dan Bahan : "
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/cardview_light_background" />


        <LinearLayout
            android:id="@+id/l_makanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnTambah"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:background="#00ffffff"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                app:srcCompat="@drawable/btntambah" />

            <ImageButton
                android:id="@+id/btnHapus"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:background="#00ffffff"
                app:srcCompat="@drawable/btnhapus" />


        </LinearLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Cara Memasak :"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textColor="@color/cardview_light_background" />


        <LinearLayout
            android:id="@+id/layout_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnTambah2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="#00ffffff"
                    app:srcCompat="@drawable/btnlangkah" />

                <ImageButton
                    android:id="@+id/btnHapus2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="#00ffffff"
                    app:srcCompat="@drawable/btnhapus" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/button2"
                style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="#00ffffff"
                app:srcCompat="@drawable/btnsubmit" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
