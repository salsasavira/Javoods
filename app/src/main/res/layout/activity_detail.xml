<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="javoods.xirpl32425263034.project2.smktelkom_mlg.sch.id.javoods.DetailActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imageFotoDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/lapis_terigu"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorAccent"
            android:text="Ingredient"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/detail_bahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bahan - Bahan" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorAccent"
            android:text="Step"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>


        <TextView
            android:id="@+id/detail_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Langkah - Langkah" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
